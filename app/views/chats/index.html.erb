<h2><%= "#{@flag.start_time.month}月#{@flag.start_time.day}日 / #{@flag.user.name} / #{@flag.status}" %></h2>
<%= render partial:'chat', collection: @chats %>

<p><%= form_with model: [@flag, @chat], local: true do |form| %>

  <div class="status">
    <%= form.label "メッセージを入力" %>
    <%= form.text_field :message %>
  </div>

  <div class="submit">
    <%= form.submit "send"%>
  </div>

<% end %></p>

<%= link_to '一覧へ戻る', user_path(current_user.id) %>