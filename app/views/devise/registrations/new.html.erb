<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form') do |f| %>

  <div class="form-title">
    <h2 class="form-title-name">Welcome to torima</h2>
  </div>

  <div class="form-error">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <div class="form-group">
      <div class='form-group-title'>
        <%= f.label :name, "あなたの名前は？" %><br />
      </div>
      <%= f.text_field :name, class: 'form-group-input', placeholder: "使用するニックネーム", autofocus: true %>
  </div>

  <div class="form-group">
        <div class='form-group-title'>
          <%= f.label :email,"あなたのメアドは？" %><br />
        </div>
    <%= f.email_field :email, class: 'form-group-input', placeholder: "ログイン用のメールアドレス", autocomplete: "email" %>
  </div>

  <div class="form-group">
        <div class='form-group-title'>
          <%= f.label :password, "合言葉を唱えてください" %><br />
          </div>
    <%= f.password_field :password, class: 'form-group-input', placeholder: "ログイン用のパスワード（6文字以上、英数字混合）", autocomplete: "new-password" %>
  </div>

  <div class="form-group">
        <div class='form-group-title'>
          <%= f.label :password_confirmation, "もう一度唱えるのです" %><br />
        </div>
    <%= f.password_field :password_confirmation, placeholder: "確認のためパスワードを再度入力", class: 'form-group-input', autocomplete: "new-password" %>
  </div>

  <div class="form-group">
      <%= f.hidden_field :code, class: 'form-group-input', value: SecureRandom.uuid %>
      <%= f.submit "▶︎LET'S GO!", class: 'btn' %>
  </div>

  <div class="bottom-link">
    <%= render "devise/shared/links" %>
  </div>
<% end %>