<% %>

<p id="notice"><%= notice %></p>
<%= "#{current_user.name}のマイページ"%>
<%= link_to "Sign out", destroy_user_session_path, method: :delete %>

<p><%= form_with(model: @list, local: true) do |form| %>

  <div class="status">
    <%= form.label "friend_code" %>
    <%= form.text_field :followed_id %>
  </div>

  <div class="submit">
    <%= form.submit %>
  </div>

<% end %></p>

<%= render partial:'flags/flag' %>

  <tbody>
    <% @flags.each do |flag| %>
      <tr>
        <td><% flag.status %></td>
        <td><% flag.start_time.strftime("%Y-%m-%d %H") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= month_calendar events: @flags do |date, flags| %>
  <%= date.day %>

  <% flags.each do |flag| %>
    <div>
      <%= link_to "#{flag.status} /#{User.find(flag.user_id).name}" , flag_chats_path(flag.id) %>
    </div>
  <% end %>
<% end %>